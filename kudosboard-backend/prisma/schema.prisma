generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Boards {
  id       Int    @id @default(autoincrement())
  name     String
  author   String
  category String
  cards    Card[]
}
model Card {
  id       Int    @id @default(autoincrement())
  title     String
  description   String
  owner String
  boardId    Int
  gifUrl     String?
  board    Boards @relation(fields: [boardId], references: [id])
}
